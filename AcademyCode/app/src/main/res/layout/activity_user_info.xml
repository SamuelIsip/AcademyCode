<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_principal.foro.UserInfo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/f"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d8000000"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="1dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="8"
            app:civ_shadow_color="#000"
            android:id="@+id/imagen_usuario_info"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/info_user_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="AcademyUser"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="AcademyEmail"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_user_telef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="AcademyTlf"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_user_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="AcademyTlf"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/containedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="¡Añadir como Amigo!"
            android:textColor="#fff"
            android:onClick="aniadirAmigo"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/btn_redondeado_green"
            android:textStyle="bold"
            android:layout_marginBottom="10dp">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VER AMIGOS"
            android:onClick="verAmigos"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/btn_redondeado_rojo"
            />

    </LinearLayout>

</RelativeLayout>
